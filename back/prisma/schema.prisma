generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  MALE
  FEMALE
}

model User {
  id    Int    @id @default(autoincrement())
  login String @unique
  email String @unique
  hash  String
  salt  String

  age  Int?
  city String?
  sex  Sex?

  Todo Todo[]
}

model Todo {
  id   Int     @id @default(autoincrement())
  text String  @default("")
  done Boolean @default(false)

  userId Int
  user   User @relation(fields: [userId], references: [id])
}
